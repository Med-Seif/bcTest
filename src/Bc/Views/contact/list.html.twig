{% extends 'layout.html.twig' %}
{% block title %}
    Liste de contacts
{% endblock %} 
{% block content %}
    <a class="pure-button" href="{{ base_url }}/contact/add?userID={{ user_id }}">Ajouter</a>
    <table class="pure-table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        {% for item in contacts %}
            <tr>
                <td>{{ item.nom }}</td>
                <td>{{ item.prenom }}</td>
                <td>{{ item.email }}</td>
                <td>
                    <a class="pure-button" href="{{ base_url }}/contact/edit?id={{ item.id }}">Éditer</a>
                    <a class="pure-button" href="{{ base_url }}/adresse/list?contactID={{ item.id }}">Adresse(s)</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}